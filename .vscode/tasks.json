{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-debug",
            "type": "shell",
            "command": "make",
            "args": ["CONFIG=debug", "-j3"],
            "dependsOn": ["setup"],
        },
        {
            "label": "setup",
            "type": "shell",
            "command": "${workspaceRoot}/scripts/setup.sh",
        }
    ]
}
