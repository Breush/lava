/**
 * Sky material.
 */

struct {
    vec4 color;
} gBuffer;

geometry {
    uniform {
        texture2d skyTexture = "white";
    };

    bool main() {
        vec4 color = texture(skyTexture, uv);
        if (color.a == 0) discard;
    
        gBuffer.color = color;

        return false;
    }
}

epiphany {
    vec4 main() {
        return gBuffer.color;
    }
}
 